<header>
  <h1>Documents repo</h1>
	<ul>
		<li>
			<%= link_to "Add", new_document_path %>
		</li>
	</ul>
</header>
<article>
	<h2> Current docs </h2>
	<% if @documents.any? %>
		<% @documents.each do |document| %>
			<section class="col-md-3">
				<div class="panel panel-default">
				  <div class="panel-heading">
				    <h3 class="panel-title">Ref: <%= document.ref %></h3>
				  </div>
				  <div class="panel-body">
				    <%= document.status %>
				    <%= image_tag document.pic.url(:medium), class: "img_#{document.ref}" %>
				  </div>
				  <div class="panel-footer">
				  	<span class="edit_<%= document.ref %>">
				  		<%= link_to "Edit", edit_document_path(document) %>
				  	</span>
					<span class="delete_<%= document.ref %>">
						<%= link_to "Delete", document_path(document), method: :delete %>
					</span>
				  </div>
				</div>
			</section>
		<% end %>
		<% else %>
			Nothing yet buddy
	<% end %>	
</article>